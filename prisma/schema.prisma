generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid()) // CUIDs are safer for distributed systems
  email          String   @unique // Required + unique
  username       String?  @unique // Optional username (unique if provided)
  hashedPassword String // Store hashed password, not raw
  createdAt      DateTime @default(now())

  @@index([email]) // Index for quick lookup
  @@index([username]) // Index for username-based queries
}
